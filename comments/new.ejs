<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align:center">Add a New Comments to <%= stadium.name %></h1>
        <div style="width:30%; margin:30px auto">
            <form action="/stadiums/<%= stadium._id %>/comments" method="POST">
                <div class="form-group">
                     <input class="form-control" type="text" name="comment[text]" placeholder="text">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[author]" placeholder="author">
                </div>
               
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
                
            </form>
                <a href="/stadiums">Go Back</a>
        </div>
        <% include ../partials/footer %>
    </div>
</div>